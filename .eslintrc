root: true

env:
  node: true
  browser: true
  es6: true

extends:
  "airbnb"

globals:
  window: true

rules:
  vars-on-top: 0

  # Warnings
  max-len: [1]

  # Errors
  quotes: [1, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
  arrow-body-style: [2, "always"]

  # Disable temporarily
  react/prop-types: 0
  comma-dangle: 1
  import/prefer-default-export: 1
